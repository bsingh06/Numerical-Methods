<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.numericalmethods.secant"
    tools:showIn="@layout/activity_secant">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="enter X0"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="60dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal|numberSigned"
        android:id="@+id/editText5"
        android:text="0"
        android:layout_toRightOf="@id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter X1"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="70dp"/>

    <EditText
        android:layout_width="60dp"
        android:text="0"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal|numberSigned"
        android:id="@+id/editText6"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView6"
        android:text="Enter error"
        android:layout_marginTop="70dp"
        android:id="@+id/textView8" />




    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText7"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/editText4"
        android:inputType="numberDecimal|numberSigned"
        android:text="0"
        android:layout_marginTop="80dp"
        android:layout_toRightOf="@id/textView8"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll2"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_below="@id/editText7">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal|numberSigned"
            android:text="0"
            android:id="@+id/ps1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x^2 +"
            android:textSize="20dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:inputType="numberDecimal|numberSigned"
            android:id="@+id/ps2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x +"
            android:textSize="20dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal|numberSigned"
            android:text="0"
            android:id="@+id/ps3"/>

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:textColor="#ffffff"
        android:onClick="calculatesecant"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn2"
        android:layout_below="@id/ll2"
        android:layout_marginTop="20dp"/>
    <View
        android:layout_width="match_parent"
        android:background="#a9a9a9"
        android:layout_height="1dp"
        android:id="@+id/view2"
        android:layout_below="@id/btn2"/>
        android:id="@+id/textView4" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter iterations"
        android:id="@+id/textView9"
        android:layout_alignParentRight="true"
        android:layout_marginRight="70dp"
        android:layout_below="@id/textView7"
        android:layout_marginTop="70dp" />

    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText8"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/editText6"
        android:text="0"
        android:inputType="numberDecimal|numberSigned"
        android:layout_marginTop="40dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Output"
        android:id="@+id/output2"
        android:textSize="30dp"
        android:layout_below="@+id/view2"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/printoutput2"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/output2"/>

</RelativeLayout>
