<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.numericalmethods.Newton"
    tools:showIn="@layout/activity_newton">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Enter The Data"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView10"
        android:id="@+id/nvalue">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the value of N(1-8):" />
        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:inputType="numberDecimal|numberSigned"
            android:id="@+id/n"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nvalue"
        android:id="@+id/layout1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editText9"
                android:hint="x1"
                android:text="0"
                android:inputType="numberDecimal|numberSigned"
                android:layout_width="50dp"
                android:layout_marginTop="-5dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/editText10"
                android:inputType="numberDecimal|numberSigned"
                android:text="0"
                android:layout_width="50dp"
                android:hint="y1"
                android:layout_marginTop="-5dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editText11"
                android:layout_width="50dp"
                android:hint="x2"
                android:inputType="numberDecimal|numberSigned"
                android:text="0"
                android:layout_marginTop="-5dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/editText12"
                android:layout_marginTop="-5dp"
                android:text="0"
                android:inputType="numberDecimal|numberSigned"
                android:layout_width="50dp"
                android:hint="y2"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editText13"
                android:text="0"
                android:inputType="numberDecimal|numberSigned"
                android:layout_width="50dp"
                android:hint="x3"
                android:layout_marginTop="-5dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/editText14"
                android:layout_width="50dp"
                android:hint="y3"
                android:text="0"
                android:inputType="numberDecimal|numberSigned"
                android:layout_marginTop="-5dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editText15"
                android:hint="x4"
                android:layout_marginTop="-5dp"
                android:inputType="numberDecimal|numberSigned"
                android:text="0"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/editText16"
                android:layout_width="50dp"
                android:text="0"
                android:inputType="numberDecimal|numberSigned"
                android:layout_marginTop="-5dp"
                android:hint="y4"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nvalue"
        android:orientation="vertical"

        android:layout_alignParentRight="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editText19"
                android:layout_width="50dp"
                android:inputType="numberDecimal|numberSigned"
                android:hint="x5"
                android:text="0"
                android:layout_marginTop="-5dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/editText20"
                android:layout_marginTop="-5dp"
                android:inputType="numberDecimal|numberSigned"
                android:hint="y5"
                android:text="0"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editText21"
                android:layout_marginTop="-5dp"
                android:text="0"
                android:inputType="numberDecimal|numberSigned"
                android:layout_width="50dp"
                android:hint="x6"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/editText22"
                android:layout_width="50dp"
                android:hint="y6"
                android:text="0"
                android:inputType="numberDecimal|numberSigned"
                android:layout_marginTop="-5dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editText23"
                android:layout_width="50dp"
                android:text="0"
                android:layout_marginTop="-5dp"
                android:inputType="numberDecimal|numberSigned"
                android:hint="x7"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/editText24"
                android:hint="y7"
                android:text="0"
                android:layout_width="50dp"
                android:inputType="numberDecimal|numberSigned"
                android:layout_marginTop="-5dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editText25"
                android:layout_width="50dp"
                android:inputType="numberDecimal|numberSigned"
                android:text="0"
                android:hint="x8"
                android:layout_marginTop="-5dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/editText26"
                android:layout_marginTop="-5dp"
                android:hint="y7"
                android:inputType="numberDecimal|numberSigned"
                android:text="0"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout1"
        android:id="@+id/xvalue">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the value of X you want Y for:" />
        <EditText
            android:layout_width="50dp"
            android:id="@+id/x"
            android:inputType="numberDecimal|numberSigned"
            android:text="0"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Calculate"
        android:textColor="#ffffff"
        android:onClick="calculatelagrangefunction"
        android:id="@+id/calculatelagrangebutton"
        android:layout_below="@id/xvalue"/>


    <View
        android:layout_width="match_parent"
        android:background="#a9a9a9"
        android:layout_height="1dp"
        android:id="@+id/newtonView"
        android:layout_below="@id/calculatelagrangebutton"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Output"
        android:id="@+id/output3"
        android:textSize="30dp"
        android:layout_below="@+id/newtonView"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/printoutput3"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/output3"/>


</RelativeLayout>
